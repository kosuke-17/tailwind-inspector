{
  "manifest_version": 3,
  "name": "Tailwind Inspector",
  "version": "0.1",
  "description": "HoverでTailwindクラスとスタイルを確認できるツール",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "",
    "default_title": "Toggle Tailwind Inspector"
  },
  "icons": {
    "48": "icons/icon48.png"
  },
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["dist/content.css"],
      "js": ["dist/content.js"]
    }
  ]
}
